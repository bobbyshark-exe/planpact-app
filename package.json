{
  "name": "planpact",
  "version": "1.0.0",
  "description": "PlanPact - Stop Flaky Plans, Start Making Pacts",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "build": "echo 'No build step required for this project'",
    "lint": "eslint *.js",
    "lint:fix": "eslint *.js --fix",
    "setup": "node start.js",
    "setup:start": "node start.js --start",
    "db:init": "psql $DATABASE_URL < database/schema.sql",
    "db:reset": "psql $DATABASE_URL -c 'DROP SCHEMA public CASCADE; CREATE SCHEMA public;' && npm run db:init"
  },
  "keywords": [
    "social",
    "planning",
    "events",
    "rsvp",
    "commitment",
    "organizing"
  ],
  "author": "PlanPact Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.7",
    "uuid": "^9.0.1",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "eslint": "^8.55.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/planpact.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/planpact/issues"
  },
  "homepage": "https://github.com/yourusername/planpact#readme"
}
